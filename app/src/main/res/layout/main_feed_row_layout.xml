<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <!--Header layout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_layout">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/picself"
                android:id="@+id/profile_pic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shreyesh Sharma"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_toRightOf="@+id/profile_pic"
                android:layout_marginTop="8dp"
                android:id="@+id/username"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:layout_below="@+id/username"
                android:id="@+id/timestamp"
                android:layout_toRightOf="@+id/profile_pic"/>
        </RelativeLayout>
        <!--Header layout-->
        <!--Middle layout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/middle_layout"
            android:layout_below="@+id/header_layout">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/picself"
                android:id="@+id/post_picture"
                android:visibility="visible"
                android:scaleType="fitXY"/>
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/post_video"
                />
        </RelativeLayout>
        <!--Middle layout-->
            <!--Footer Layout-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/middle_layout"
                android:background="@drawable/border_bottom">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/whiteheart"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/heart"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32 Likes"
                    android:textColor="#EC1111"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/heart"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/likes_count"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View 32 Comments"
                    android:id="@+id/commentText"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <!--Footer Layout-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>